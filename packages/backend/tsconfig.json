{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["ESNext"],
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": "./"
    },
    "include": ["../shared/src/types/*"],
    "exclude": ["./coverage", "./dist", "__tests__", "jest.config.ts"]
}
